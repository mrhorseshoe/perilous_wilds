# A sample Gemfile
source 'http://rubygems.org'

gem 'roda', "~> 3.0"
gem 'tilt'
gem 'sass'
gem 'unicorn'
gem 'base58'
gem 'rack'

group :development do
  gem 'shotgun'
  gem 'capistrano'
  gem 'capistrano-bundler'
  gem 'capistrano-rbenv'
  gem 'ed25519', ">= 1.2", "< 2.0"
  gem 'rbnacl'
  gem 'bcrypt_pbkdf', ">= 1.0", "< 2.0"
  gem 'rspec'
  gem 'awesome_print'
  gem 'pry'
  gem 'rubycritic'
  gem 'guard'
  gem 'guard-rspec'
  gem 'racksh'
end

group :test do
  gem 'capybara'
  gem 'simplecov', require: false
  gem 'simplecov-json', require: false
  gem 'simplecov-rcov', require: false
  gem "rspec_junit_formatter"
end
